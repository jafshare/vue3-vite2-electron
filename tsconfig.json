{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@common/*": [
        "common/*"
      ],
      "@@/*": [
        "electron/main/*"
      ]
    },
    "types": [
      "naive-ui/volar"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "common",
    "typings",
    "electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
